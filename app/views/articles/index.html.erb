<h1>Articles</h1>
<%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>

<% @articles.each do |article| %>
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-3">
        <div class="card-body">
          <h3 class="card-title">
            <%= link_to article.title, article %>
          </h3>
          <p>
            <%= truncate(article.body, length: 500) %>
          </p>
        </div>
      </div>
    </div>
  </div>



<% end %>
