<div class="d-flex justify-content-between align-items-center">
  <h1>Articles</h1>
  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
</div>

<% if @articles.none? %>
  <div class="alert alert-warning mt-3" id="no-articles">
    No articles created
  </div>
<% else %>
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-body">
            <h3 class="card-title">
              <%= link_to article.title, article %>
            </h3>
            <p>
              <%= truncate(article.body, length: 500) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
