<h3 class="text-center">New Article</h3>
<div class="row">
  <div class="col-md-12">
    <%= form_for @article, html: { class: 'form-horizontal', role: 'form'} do |f| %>
      <% if @article.errors.any? %>
        <div class="card text-white bg-danger">
          <div class="card-header">
            <b><%= pluralize(@article.errors.count, "error") %>
            prohibited this atricle from being saved</b>
          </div>
          <div class="card-body">
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <div class='form-group'>
        <%= f.label :title, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control',
                                 placeholder: 'Title of the article',
                                 autofocus: true %>
      </div>
      <div class='form-group'>
        <%= f.label :body, class: 'control-label' %>
        <%= f.text_area :body, class: 'form-control',
                               rows: 5,
                               placeholder: 'Body of the article' %>
      </div>
      <%= f.submit 'Create Article', class: 'btn btn-primary float-right' %>
    <% end %>
  </div>
</div>
